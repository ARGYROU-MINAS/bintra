%_signature gpg
%_gpgbin /usr/bin/gpg
%_gpg_name Kretschmann Package Signer
%_gpg_passphrase_file /passphrase.txt
%__gpg_sign_cmd %{__gpg} gpg --force-v3-sigs --batch --pinentry-mode loopback --passphrase-file "%{_gpg_passphrase_file}" --verbose --no-armor --no-secmem-warning -u "%{_gpg_name}" -sbo %{__signature_filename} --digest-algo sha256 %{__plaintext_filename}'

